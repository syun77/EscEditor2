def hole
{
	// 懐中電灯チェック
	ITEM_CHK(ITEM_FLASHLIGHT)
	if($RET) {
		// 探索可能
		if(%SEARCH_HOLE == false) {
			":懐中電灯で穴を調べることができそうだ……"
			WAIT(1)
		}
		%SEARCH_HOLE = true
	}
	if(%SEARCH_HOLE) {
		JUMP(7)
	}
	else {
		":暗くて深い穴だ"
	}
}

