def lock
{
	// ああな
	// いいに
	// ううぬ
	// ええね
	// おおの
	PIC_INPUT(3, 40, 3)
	if($40 == 113) { // い(1)→い(1)→ね(3)
		":ロックを解除した"
		%UNLOCK_GJ = true
	}
	else {
		":正しくないようだ"
	}
}

